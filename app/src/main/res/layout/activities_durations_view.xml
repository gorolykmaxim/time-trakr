<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/WindowPadding"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_message"
            style="@style/CardPadding"
            android:textSize="18sp"
            android:text="@string/work_logs_for_today"/>
    </androidx.cardview.widget.CardView>
    <com.example.timetrakr.view.common.ClosableTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_duration"
        android:visibility="invisible"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/activities_durations_recycler_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>